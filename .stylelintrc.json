{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "color-no-invalid-hex": true,
    "color-named": "never",
    "declaration-property-value-allowed-list": {
      "color": [
        "#358373", "#5FCEB3", "#B9E4D4", "#F5F7FA", "#1E293B", "white", "black"
      ],
      "background-color": [
        "#358373", "#5FCEB3", "#B9E4D4", "#F5F7FA", "white"
      ],
      "font-family": [
        "/Montserrat/", "/Inter/", "Arial", "sans-serif"
      ],
      "border-radius": [
        "1rem", "9999px"
      ]
    }
  }
}
